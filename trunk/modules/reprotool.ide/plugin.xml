<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="cz.cuni.mff.reprotool.ide.category_reprotool"
            name="ReProTool">
      </category>
      <view
            category="cz.cuni.mff.reprotool.ide.category_reprotool"
            class="reprotool.ide.views.LinguisticToolsView"
            id="cz.cuni.mff.reprotool.ide.views.view_linguistic_tools"
            name="Linguistic Tools"
            restorable="true">
      </view>
      <view
            category="cz.cuni.mff.reprotool.ide.category_reprotool"
            class="reprotool.ide.views.ParsedTreeView"
            id="cz.cuni.mff.reprotool.ide.view_parsed_tree"
            name="Parsed Tree"
            restorable="true">
      </view>
      <view
            category="cz.cuni.mff.reprotool.ide.category_reprotool"
            class="reprotool.ide.views.ProjectView"
            id="cz.cuni.mff.reprotool.ide.view_project"
            name="Software Project"
            restorable="true">
      </view>
            <view
            category="cz.cuni.mff.reprotool.ide.category_reprotool"
            class="reprotool.ide.views.UcStepView"
            id="cz.cuni.mff.reprotool.ide.uc_step_view"
            name="Use-Case Step"
            restorable="true">
      </view>
      <view
         name="Progress View"
         category="org.eclipse.ui"
         class="org.eclipse.ui.ExtensionFactory:progressView"
         id="org.eclipse.ui.views.ProgressView"
         restorable="true">
      </view>     
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="reprotool.ide.ReprotoolIdePerspectiveFactory"
            icon="icons/reprotool-web-logo-16x16.png"
            id="cz.cuni.mff.reprotool.ide.perspective_reprotool_ide"
            name="Reprotool">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="reprotool.ide.editors.UseCaseEditor"
            default="true"
            extensions="usecase"
            id="cz.cuni.mff.reprotool.ide.UseCaseEditor"
            name="Use case">
      </editor>
      <editor
            class="reprotool.ide.editors.ProjectEditor"
            default="false"
            extensions="ucproj"
            id="cz.cuni.mff.reprotool.ide.project"
            name="Project">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="reprotool.ide.commands.AddActor"
            id="commands.addActor"
            name="Add actor">
      </command>
      <command
            defaultHandler="reprotool.ide.commands.RemoveActor"
            id="commands.removeActor"
            name="Remove actor">
      </command>
      <command
            defaultHandler="reprotool.ide.commands.ShowStep"
            id="commands.showStep"
            name="Show step">
      </command>
      <command
            defaultHandler="reprotool.ide.commands.NewStep"
            id="commands.newStep"
            name="New step">
      </command>
      <command
            defaultHandler="reprotool.ide.commands.AddScenario"
            id="commands.addExtension"
            name="Add extension">
      </command>
      <command
            defaultHandler="reprotool.ide.commands.AddScenario"
            id="commands.addVariation"
            name="Add variaton">
      </command>
      <command
            defaultHandler="reprotool.ide.commands.DeleteStep"
            id="commands.deleteStep"
            name="Delete step">
      </command>
      <command
            defaultHandler="reprotool.ide.commands.DuplicateStep"
            id="commands.duplicateStep"
            name="Duplicate step">
      </command>
      <command
            defaultHandler="reprotool.ide.commands.MoveStep"
            id="commands.stepUp"
            name="Move up">
      </command>
      <command
            defaultHandler="reprotool.ide.commands.MoveStep"
            id="commands.stepDown"
            name="Move down">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="reprotool.ide.category1"
            name="Reprotool">
      </category>
      <wizard
            category="reprotool.ide.category1"
            class="reprotool.ide.wizards.ProjectWizard"
            finalPerspective="cz.cuni.mff.reprotool.ide.perspective_reprotool_ide"
            hasPages="true"
            icon="icons/reprotool-web-logo-16x16.png"
            id="reprotool.ide.wizard1"
            name="Reprotool Project"
            project="true">
      </wizard>
      <wizard
            category="reprotool.ide.category1"
            class="reprotool.ide.wizards.UsecaseWizard"
            id="reprotool.ide.UseCaseWizard"
            name="Use case">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="reprotool.ide.preferences.ReprotoolPreferencePage"
            id="reprotool.ide.preferences.ReprotoolPreferencePage"
            name="ReProTool">
      </page>
      <page
            class="reprotool.ide.preferences.LingToolsPreferencePage"
            id="reprotool.ide.preferences.LingToolsPreferencePage"
            name="Linguistics Tools"
            category="reprotool.ide.preferences.ReprotoolPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="reprotool.ide.preferences.PreferenceInitializer">
      </initializer>
      <initializer
            class="reprotool.ide.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="cz.cuni.mff.reprotool.ide.perspective_reprotool_ide">
         <viewShortcut
               id="cz.cuni.mff.reprotool.ide.views.view_linguistic_tools">
         </viewShortcut>
         <viewShortcut
               id="cz.cuni.mff.reprotool.ide.view_project">
         </viewShortcut>
         <viewShortcut
               id="cz.cuni.mff.reprotool.ide.view_parsed_tree">
         </viewShortcut>
         <viewShortcut
               id="cz.cuni.mff.reprotool.ide.uc_step_view">
         </viewShortcut>
         <perspectiveShortcut
               id="org.tigris.subversion.subclipse.ui.svnPerspective">
         </perspectiveShortcut>
         <perspectiveShortcut
               id="org.tigris.subversion.subclipse.ui.svnPerspective">
         </perspectiveShortcut>
         <view
               closeable="true"
               id="org.eclipse.ui.navigator.ProjectExplorer"
               minimized="false"
               moveable="true"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ui.views.PropertySheet"
               minimized="false"
               moveable="true"
               ratio="0.6"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ui.views.ProgressView"
               minimized="false"
               moveable="true"
               ratio="0.7"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               closeable="true"
               id="cz.cuni.mff.reprotool.ide.views.view_linguistic_tools"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="org.eclipse.ui.views.ProgressView"
               visible="true">
         </view>
         <view
               closeable="true"
               id="cz.cuni.mff.reprotool.ide.uc_step_view"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="org.eclipse.ui.views.PropertySheet"
               visible="true">
         </view>
         <view
               closeable="true"
               id="cz.cuni.mff.reprotool.ide.view_parsed_tree"
               minimized="false"
               moveable="true"
               relationship="bottom"
               relative="org.eclipse.ui.views.PropertySheet"
               visible="true">
         </view>
         <newWizardShortcut
               id="reprotool.ide.wizard1">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="reprotool.ide.views.ActorsContentProvider"
            id="reprotool.ide.navigator.actorsContent"
            labelProvider="reprotool.ide.views.ActorsLabelProvider"
            name="Actors included in project">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof></triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="java.lang.String">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="reprotool.ide.navigator.actorsContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         id="reprotool.ide.natures.ReprotoolProjectNature"
         name="Reprotool Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="reprotool.ide.natures.ReprotoolProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="id1"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="reprotool.ide.ProjectNature1">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/reprotool-web-logo-16x16.png"
            id="reprotool.ide.natures.ProjectIcon"
            natureId="reprotool.ide.natures.ReprotoolProjectNature">
      </image>
   </extension>

